<Page
    x:Class="SatisfactoryModdingHelper.Dialogs.SingleInputRequestDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SatisfactoryModdingHelper.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel
        Margin="{StaticResource MediumLeftTopRightBottomMargin}"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <TextBox x:Name="TextBox" Text="{x:Bind InputResult, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </StackPanel>

</Page>
