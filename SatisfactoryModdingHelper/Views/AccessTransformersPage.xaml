<Page
    x:Class="SatisfactoryModdingHelper.Views.AccessTransformersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:SatisfactoryModdingHelper.ViewModels"
    x:Name="Page"
    d:DataContext="{d:DesignInstance Type=viewmodels:AccessTransformersViewModel}"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <Pivot SelectedItem="{x:Bind ViewModel.SelectedPivotItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <Pivot.RightHeader>
                <Button VerticalAlignment="Center" Command="{x:Bind ViewModel.AddTransformer}">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
                            Margin="0,5,0,0"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                            FontSize="24"
                            Glyph="&#xe710;" />
                        <TextBlock
                            Margin="{StaticResource SmallLeftMargin}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="Add Transformer" />
                    </StackPanel>
                </Button>
            </Pivot.RightHeader>
            <PivotItem Header="Friends">
                <ListView
                    Margin="{StaticResource MediumTopMargin}"
                    ItemsSource="{x:Bind ViewModel.Friends, UpdateSourceTrigger=PropertyChanged}"
                    ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="{StaticResource XSmallTopMargin}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Border Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}" CornerRadius="5">
                                    <Grid Grid.Row="0" Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <TextBox
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Header="Class:"
                                            Text="{Binding Class}" />
                                        <TextBox
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Margin="{StaticResource SmallTopMargin}"
                                            Header="Friend Class:"
                                            Text="{Binding FriendClass}" />
                                        <Button
                                            Grid.RowSpan="2"
                                            Grid.Column="1"
                                            MinWidth="75"
                                            Margin="{StaticResource SmallLeftMargin}"
                                            VerticalAlignment="Stretch"
                                            Command="{Binding ElementName=Page, Path=ViewModel.RemoveFriend}"
                                            CommandParameter="{Binding}">
                                            <FontIcon
                                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                FontSize="24"
                                                Glyph="&#xe74d;" />
                                        </Button>
                                    </Grid>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ListView>
            </PivotItem>
            <PivotItem Header="Blueprint Read/Writes">
                <ListView
                    Margin="{StaticResource MediumTopMargin}"
                    ItemsSource="{x:Bind ViewModel.Blueprints, UpdateSourceTrigger=PropertyChanged}"
                    ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="{StaticResource XSmallTopMargin}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Border Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}" CornerRadius="5">
                                    <Grid Grid.Row="0" Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <TextBox
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Header="Class:"
                                            Text="{Binding Class}" />
                                        <TextBox
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Header="Property:"
                                            Text="{Binding Property}" />
                                        <Button
                                            Grid.RowSpan="2"
                                            Grid.Column="1"
                                            MinWidth="75"
                                            Margin="{StaticResource SmallLeftMargin}"
                                            VerticalAlignment="Stretch"
                                            Command="{Binding ElementName=Page, Path=ViewModel.RemoveBlueprintReadWrite}"
                                            CommandParameter="{Binding}">
                                            <FontIcon
                                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                FontSize="24"
                                                Glyph="&#xe74d;" />
                                        </Button>
                                    </Grid>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ListView>
            </PivotItem>
            <PivotItem Header="Accessors">
                <ListView
                    Margin="{StaticResource MediumTopMargin}"
                    ItemsSource="{x:Bind ViewModel.Accessors, UpdateSourceTrigger=PropertyChanged}"
                    ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="{StaticResource XSmallTopMargin}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Border Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}" CornerRadius="5">
                                    <Grid Grid.Row="0" Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <TextBox
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Header="Class:"
                                            Text="{Binding Class}" />
                                        <TextBox
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Margin="{StaticResource SmallTopMargin}"
                                            Header="Property:"
                                            Text="{Binding Property}" />
                                        <Button
                                            Grid.RowSpan="2"
                                            Grid.Column="1"
                                            MinWidth="75"
                                            Margin="{StaticResource SmallLeftMargin}"
                                            VerticalAlignment="Stretch"
                                            Command="{Binding ElementName=Page, Path=ViewModel.RemoveAccessor}"
                                            CommandParameter="{Binding}">
                                            <FontIcon
                                                FontFamily="{StaticResource SymbolThemeFontFamily}"
                                                FontSize="24"
                                                Glyph="&#xe74d;" />
                                        </Button>
                                    </Grid>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ListView>
            </PivotItem>
        </Pivot>

    </Grid>
</Page>
